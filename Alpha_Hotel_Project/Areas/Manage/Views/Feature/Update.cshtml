@model Feature

<div class="col-sm-12 pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Feature Update</h6>
        <form method="post">
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Feature Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Feature...">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Icon" class="col-sm-2 col-form-label">Icon</label>
                <div class="col-sm-10">
                    <input asp-for="Icon" class="form-control" placeholder="Icon...">
                </div>
            </div>
            <div class="row mb-3">
                <div class="icon">
                    @Html.Raw(Model.Icon)
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>